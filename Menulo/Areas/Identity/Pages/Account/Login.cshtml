@page
@model LoginModel

@{
    ViewData["Title"] = "Đăng nhập";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link href="~/css/pages/login/site-login.css" rel="stylesheet" />
    @* <link href="~/css/login/features-modal.css" rel="stylesheet" /> *@
</head>
<body>
    <div class="container">
        <div class="main-container">
            <div class="card p-4">
                <!-- Phần 3 ảnh giới thiệu -->
                <div class="intro-section">
                    <div class="row g-3">
                        <div class="col-4">
                            <div class="intro-item">
                                <div class="step-number">1</div>
                                <img src="~/images/qrlogo.png" alt="Quét Mã" class="intro-icon">
                                <p class="intro-caption">Quét <br /> Mã</p>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="intro-item">
                                <div class="step-number">2</div>
                                <img src="~/images/menuLogo.png" alt="Gọi Món" class="intro-icon">
                                <p class="intro-caption">Gọi <br />Món</p>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="intro-item">
                                <div class="step-number">3</div>
                                <img src="~/images/foodLogo.png" alt="Thưởng thức" class="intro-icon">
                                <p class="intro-caption">Thưởng <br /> thức</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Phần đăng nhập -->
                <h2 class="text-center">MENULO</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <form id="account" method="post">
                    <div class="mb-3">
                        <label asp-for="Input.Username" class="form-label">Tên đăng nhập</label>
                        <input asp-for="Input.Username" class="form-control" placeholder="Nhập tên đăng nhập" required>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label">Mật khẩu</label>
                        <input asp-for="Input.Password" class="form-control" placeholder="Nhập mật khẩu" required>
                    </div>
                    <div class="checkbox mb-4">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <button id="login-submit" type="submit" class="text-uppercase btn btn-custom w-100">Đăng Nhập</button>
                </form>


                <div class="d-flex justify-content-center">
                   @*  <a href="#" class="register-link" data-bs-toggle="modal" data-bs-target="#featuresModal">
                        <h6><i class="fa-solid fa-star"></i> Video hướng dẫn</h6>
                    </a> *@
                    <a asp-area="Identity" asp-page="/Account/RestaurantRegister" class="register-link">
                        <h6>Tạo mới tài khoản</h6>
                    </a>
                </div>

                <!-- ADDED: Zalo Support Link directly on the form -->
                @* <div class="text-center mt-4">
                    <a href="https://zalo.me/2221031331026970972" target="_blank" class="support-link-form">
                        <i class="bi bi-headset"></i> Hỗ trợ trực tuyến
                    </a>
                </div> *@
            </div>
        </div>
    </div>

    <!-- Modal for Features -->
    @* @await Html.PartialAsync("PartialView/_FeaturesPartial") *@

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Js for Video Modal -->
    @* <script src="~/js/login/feautures-modal.js"></script> *@
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
