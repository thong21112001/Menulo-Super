@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Truy cập bị từ chối";
}

<div class="text-center mt-5">
    <i class="bi bi-shield-lock text-danger" style="font-size: 4rem;"></i>
    <h2 class="text-danger mt-3">@ViewData["Title"]</h2>
    <p class="text-muted">Bạn không có quyền truy cập vào tài nguyên này hoặc hành động này yêu cầu quyền cao hơn.</p>

    <a asp-page="/Index" class="btn btn-outline-secondary mt-3">
        <i class="bi bi-arrow-left"></i> Quay về trang chủ
    </a>
</div>
