@page
@model Menulo.Pages.RoleSale.CreateRestaurant.CreateModel
@{
    ViewData["Title"] = "Tạo mới thông tin";
}

<h3>@ViewData["Title"]</h3>

<hr />

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <h4>Thông tin nhà hàng</h4>
            <hr />
            <div class="row">
                <div class="form-group col-md-3 mb-3">
                    <label asp-for="Input.Name" class="control-label"></label><span class="text-danger">*</span>
                    <input asp-for="Input.Name" class="form-control" />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>

                <div class="form-group col-md-3 mb-3">
                    <label asp-for="Input.Address" class="control-label"></label><span class="text-danger">*</span>
                    <input asp-for="Input.Address" class="form-control" />
                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                </div>

                <div class="form-group col-md-3 mb-3">
                    <label asp-for="Input.Phone" class="control-label"></label><span class="text-danger">*</span>
                    <input asp-for="Input.Phone" class="form-control" />
                    <span asp-validation-for="Input.Phone" class="text-danger"></span>
                </div>

                <div class="form-group col-md-3 mb-3">
                    <label asp-for="Input.FullName" class="control-label"></label><span class="text-danger">*</span>
                    <input asp-for="Input.FullName" class="form-control" />
                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>
            </div>

            <h4>Thông tin tài khoản</h4>
            <hr />
            <div class="row">
                <div class="form-group col-md-3 mb-3">
                    <label asp-for="Input.Username" class="control-label"></label><span class="text-danger">*</span>
                    <input asp-for="Input.Username" class="form-control" placeholder="vanA123" />
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>

                <div class="form-group col-md-3 mb-3">
                    <label asp-for="Input.Email" class="control-label"></label><span class="text-danger">*</span>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-group col-md-3 mb-3">
                    <label asp-for="Input.Password" class="control-label"></label><span class="text-danger">*</span>
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="Mật khẩu" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-group col-md-3 mb-3">
                    <label asp-for="Input.ConfirmPassword" class="control-label"></label><span class="text-danger">*</span>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Xác nhận mật khẩu" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/pages/shared/valid_submit_create.js"></script>
    @{
        var alert = TempData.GetAlert();
        if (alert != null)
        {
            <script>
                Swal.fire({
                    icon: '@alert.Icon',
                    title: '@Html.Raw(alert.Message)'
                });
            </script>
        }
    }
}