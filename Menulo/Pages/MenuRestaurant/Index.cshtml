@page
@model Menulo.Pages.MenuRestaurant.IndexModel

@{
    ViewData["Title"] = "Menu";
}

@section Styles {
    <link href="~/css/pages/menu-restaurant/responsive-menu.css" rel="stylesheet" />
}

@foreach (var group in Model.MenuGroups)
{
    <section class="mb-2">
        <h2 class="h4 text-primary border-bottom pb-2 text-uppercase">@group.CategoryName</h2>

        <div class="row">
            @foreach (var item in group.Items)
            {
                <div class="col-lg-2 col-md-4 col-6 mb-2">
                    <div class="card shadow-sm">

                        @* Luôn render container để layout không nhảy khi có/không có ảnh *@
                        <div class="img-container">
                            @{
                                // Nếu DTO đã đặt ImageUrl là proxy (ví dụ: "/api/images/menuitems/123?w=400&h=300")
                                // thì dùng thẳng item.ImageUrl; nếu null/empty -> dùng placeholder
                                var imgSrc = string.IsNullOrWhiteSpace(item.ImageUrl)
                                ? Url.Content("~/images/image.png")
                                : Url.Content(item.ImageUrl);
                            }
                            <img src="@imgSrc"
                                 class="img-fluid"
                                 alt="@(!string.IsNullOrWhiteSpace(item.ItemName) ? item.ItemName : "Ảnh món")"
                                 loading="lazy"
                                 decoding="async"
                                 onerror="this.onerror=null;this.src='@Url.Content("~/images/image.png")';" />
                        </div>

                        <div class="card-body">
                            <h5 class="card-title">@item.ItemName</h5>
                            <p class="card-text">
                                @if (item.Price == 0 || item.Price == null)
                                {
                                    <strong>Theo thời giá</strong>
                                }
                                else
                                {
                                    <strong>@String.Format("{0:0,0 đ}", item.Price)</strong>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
}

@if (!Model.MenuGroups.Any())
{
    <div classs="alert alert-info">
        <h4>Chưa có món ăn nào.</h4>
        <p>Hiện tại nhà hàng của bạn chưa có món ăn nào được bật "Đang bán". Vui lòng vào trang "Danh sách món" để thêm hoặc bật món ăn.</p>
        <a asp-page="/MenuItems/Index" class="btn btn-primary">Đi tới trang Quản lý món</a>
    </div>
}