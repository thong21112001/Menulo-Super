@page "{id:int}"
@model Menulo.Pages.Superadmin.Restaurants.EditModel

@{
    ViewData["Title"] = "Cập nhập thông tin";
}

<h3>@ViewData["Title"] nhà hàng</h3>

<hr />

<div class="row">
    <div class="col-md-12">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Input.RestaurantId" />

            <div class="row">
                <div class="form-group col-md-3 mb-3">
                    <label asp-for="Input.Name" class="control-label"></label><span class="text-danger">*</span>
                    <input asp-for="Input.Name" class="form-control" maxlength="200" />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>

                <div class="form-group col-md-3 mb-3">
                    <label asp-for="Input.Phone" class="control-label"></label>
                    <input asp-for="Input.Phone" class="form-control" maxlength="20" />
                    <span asp-validation-for="Input.Phone" class="text-danger"></span>
                </div>

                <div class="form-group col-md-3 mb-3">
                    <label asp-for="Input.Address" class="control-label"></label>
                    <input asp-for="Input.Address" class="form-control" maxlength="500" />
                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                </div>

                <div class="form-group col-md-3 mb-3">
                    <label class="control-label">Tải lên logo mới (jpg/png)</label>
                    <input type="file" asp-for="ImgUpload" class="form-control" accept=".jpg,.jpeg,.png" />
                    <span class="form-text text-muted">Để trống nếu muốn giữ logo hiện tại.</span>
                    <span asp-validation-for="ImgUpload" class="text-danger"></span>
                </div>
            </div>

            @if (!string.IsNullOrWhiteSpace(Model.CurrentLogoUrl))
            {
                <div class="mb-2">
                    <span class="form-text text-muted">Logo hiện tại:</span><br />
                    @{
                        // Thêm version và kích thước vào URL
                        var logoSrc = $"/api/images/restaurants/{Model.Input.RestaurantId}/logo?w=150&h=150";
                        if (Model.CurrentLogoVersion.HasValue)
                        {
                            logoSrc += $"&v={Model.CurrentLogoVersion.Value}";
                        }
                    }
                    <img src="@logoSrc" width="150" height="150" class="img-thumbnail mt-2" alt="Restaurant Logo" loading="lazy" />
                </div>
            }

            <div class="form-group mt-3">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    @{
        var alert = TempData.GetAlert();
        if (alert != null)
        {
            <script>
                Swal.fire({
                    icon: '@alert.Icon',
                    title: '@Html.Raw(alert.Message)'
                });
            </script>
        }
    }
}
