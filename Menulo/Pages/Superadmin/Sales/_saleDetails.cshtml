<!-- Details Modal -->
<div class="modal fade" id="saleDetailsModal" tabindex="-1" aria-labelledby="staticBackdropLabel" data-bs-backdrop="static" data-bs-keyboard="false" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-info-circle me-1"></i>Chi tiết sale
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>

            <div class="modal-body">

                <!-- Loading -->
                <div id="sale-details-loading" class="text-center py-4 d-none">
                    <div class="spinner-border" role="status" aria-hidden="true"></div>
                    <div class="mt-2">Đang tải...</div>
                </div>

                <!-- Details -->
                <div id="sale-details" class="d-none">
                    <dl class="row mb-0">
                        <dt class="col-sm-3">Họ và tên</dt>
                        <dd class="col-sm-9" data-field="fullName"></dd>

                        <dt class="col-sm-3">Tên tài khoản</dt>
                        <dd class="col-sm-9" data-field="username"></dd>

                        <dt class="col-sm-3">Email</dt>
                        <dd class="col-sm-9" data-field="email"></dd>

                        <dt class="col-sm-3">Số điện thoại</dt>
                        <dd class="col-sm-9" data-field="phoneNumber"></dd>
                    </dl>
                </div>
                <div id="sale-details-empty" class="alert alert-warning d-none">
                    Không tìm thấy dữ liệu.
                </div>
            </div>

            <div class="modal-footer">
                <a id="sale-edit-link" class="btn btn-warning d-none">
                    <i class="bi bi-pencil-square"></i> Chỉnh sửa
                </a>
                <button id="btn-delete-in-details" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Xóa
                </button>
                <button class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>