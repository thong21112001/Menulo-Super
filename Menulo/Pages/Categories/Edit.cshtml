@page
@model Menulo.Pages.Categories.EditModel

@{
    ViewData["Title"] = "Cập nhập";
}

<h3>Cập nhập danh mục</h3>

<hr />

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Input.CategoryId" />

            <div class="row">
                @if (User.IsInRole("superadmin"))
                {
                    <div class="form-group col-md-4">
                        <label asp-for="Input.RestaurantId" class="control-label"></label>
                        <select asp-for="Input.RestaurantId"
                                class="form-control"
                                asp-items="ViewBag.RestaurantId">
                        </select>
                        <span asp-validation-for="Input.RestaurantId" class="text-danger"></span>
                    </div>
                }
                else
                {
                    <div class="form-group col-md-4" style="display:none;">
                        <label asp-for="Input.RestaurantId" class="control-label"></label>
                        <input class="form-control" value="@Model.RestaurantName" disabled />
                    </div>
                }

                <div class="form-group col-md-4">
                    <label asp-for="Input.CategoryName" class="control-label"></label><span class="text-danger">*</span>
                    <input asp-for="Input.CategoryName" class="form-control" maxlength="200" />
                    <span asp-validation-for="Input.CategoryName" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group mt-3">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{
        var alert = TempData.GetAlert();
        if (alert != null)
        {
            <script>
                Swal.fire({
                    icon: '@alert.Icon',
                    title: '@Html.Raw(alert.Message)'
                });
            </script>
        }
    }
}
